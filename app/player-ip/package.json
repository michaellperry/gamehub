{
  "name": "player-ip",
  "version": "1.0.0",
  "description": "GameHub Player Identity Provider - OAuth 2.0 identity provider for players",
  "private": true,
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "nodemon --exec \"node --loader ts-node/esm src/server.ts\"",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "npm run test:unit && npm run test:integration && npm run test:contract",
    "test:unit": "npm run build && node --test tests/unit/**/*.test.js",
    "test:integration": "npm run build && node test-integration.js",
    "test:component": "npm run build && node test-components.js",
    "test:contract": "npm run build && node tests/contract/api-contract.test.js",
    "test:performance": "npm run build && node tests/performance/load.test.js",
    "test:security": "npm run build && node tests/security/security.test.js",
    "test:coverage": "c8 npm run test",
    "test:watch": "nodemon --exec \"npm run test:unit\"",
    "type-check": "tsc --noEmit",
    "validate": "npm run type-check && npm run test",
    "health-check": "node scripts/health-check.js",
    "migrate": "node scripts/migrate.js"
  },
  "dependencies": {
    "better-sqlite3": "^11.9.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "gamehub-model": "file:../gamehub-model",
    "jinaga": "^6.7.8",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "c8": "^8.0.1",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2"
  },
  "author": "Michael L Perry",
  "license": "MIT"
}

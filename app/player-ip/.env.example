# Player IP Environment Configuration

# Server Configuration
NODE_ENV=development
SERVER_PORT=8082

# JWT Configuration
JWT_SECRET=development-secret-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_ISSUER=player-ip
JWT_AUDIENCE=gamehub-players
JWT_KEY_ID=player-ip-key

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info

# SQLite Configuration
SQLITE_DB_PATH=./data/player-ip.db

# Refresh Token Configuration
REFRESH_TOKEN_EXPIRES_IN=14d
ROTATE_REFRESH_TOKENS=false

# Service Discovery Configuration
SERVICE_IP_URL=http://service-ip:8083
SERVICE_IP_CLIENT_ID=player-ip
SERVICE_IP_CLIENT_SECRET_FILE=./secrets/player-ip-client-secret